<h2>Topic List</h2>

<table>
  <tr>
    <th>Topic</th>
    <th>Author</th>
    <th>Comments</th>
    <th>Time</th>
  </tr>

  <% @topics.each do |t| %>
    <tr>
      <td><%= t.title %></td>
      <td><%= t.user.try(:display_name) %></td>
      <td><%= t.comments_count %></td>
      <td><%= t.created_at.strftime("%B %d at %I:%M %p") %></td>
    </tr>
  <% end %>

</table>

<%= paginate @topics %>